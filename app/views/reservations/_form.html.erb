<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>
<script type="text/javascript" src="/website/bower_components/jquery-timepicker-jt/jquery.timepickerjs"></script>

<%= form_for(@reservation) do |f| %>
  <% if @reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
      <% @reservation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form role="form">
    <br>
    <div class = "row">
      <div class = "form-group col-md-3">
        <%= f.label :project %><br>
        <%= f.text_field :project, class: "form-control" %>
      </div>
    </div>

  <script type="text/javascript">
      $('start_time').timepicker();
        $('#setTimeButton').on('click', function (){
        $('#start_time').timepicker('setTime', new Date());
      });
  </script>

    <div class = "row">
      <div class = "form-group col-md-3">
        <%= f.label :start_time %><br>
        <%= f.time_field :start_time, class: "form-control" %>
      </div>
    </div>

    <div class = "row">
      <div class = "form-group col-md-3">
        <%= f.label :end_time %><br>
        <%= f.time_field :end_time, class: "form-control" %>
      </div>
    </div>

    <div class = "row">
      <div class = "form-group col-md-3">
        <%= f.label :room_number %><br>
        <%= f.select(:which_room, [["Room 1", 1], ["Room 2", 2], ["Room 3", 3], ["Red", "Red"], ["Orange", "Orange"], ["Yellow", "Yellow"], ["Green", "Green"]]) %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  </form>
<% end %>