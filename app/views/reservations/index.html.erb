<h1>Room Reservations</h1>

<div class="table-responsive">
  <table class = "table table-striped">
    <thead>
      <tr>
        <th>User Name</th>
        <th>Project</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Room Number</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |r| %>
        <tr>
          <td><%= current_user.name %></td> 
          <td><%= r.project %></td>
          <td><%= r.start_time.strftime("%I:%M %p") if r.start_time != nil %></td>
          <td><%= r.end_time.strftime("%I:%M %p") if r.end_time != nil %></td>
          <td><%= r.which_room %></td>
          <td><%= link_to 'Edit', edit_reservation_path(r) %></td>
          <td><%= link_to 'Destroy', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  

<br>

<%= link_to 'New Reservation', new_reservation_path, class: "btn btn-warning btn-sm" %>
