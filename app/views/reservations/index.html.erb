<% if user_signed_in? %>

  <div id="image-container"> 
    <img id="image-right" src="../assets/right_slice.png" alt="left"> 
    <img id="image-left" src="../assets/left_slice.png" alt="right"> 
    <img id="image-center" src="../assets/main_img.png" alt="main"> 
  </div> 
  
  <center>
    <p><font size="6"> Welcome <%= current_user.name %>!</font></p><br>
    <p><%= link_to 'Create a Reservation', new_reservation_path, class: "btn btn-warning btn-sm" %></p>
  </center>
  
  <br>

  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-tile">
        <font size="4">Current Reservations</font>
      </div>
    </div>

    <div class="panel-body">
      <div class="table-responsive">
        <table class = "table table-striped">
          <thead>
            <tr>
              <th>User Name</th>
              <th>Project</th>
              <th>Start time</th>
              <th>End time</th>
              <th>Room Number</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @reservations.each do |r| %>
              <tr>
                <td><%= current_user.name %></td> 
                <td><%= r.project %></td>
                <td><%= r.start_time.strftime("%I:%M %p") if r.start_time != nil %></td>
                <td><%= r.end_time.strftime("%I:%M %p") if r.end_time != nil %></td>
                <td><%= r.which_room %></td>
                <td><%= link_to 'Edit', edit_reservation_path(r) %></td>
                <td><%= link_to 'Destroy', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<% else %>

  <div style="position:relative">
    <div style="top:50px; left:50px; z-index:60;" id="image">
      <center><img src="../assets/main_img.png" alt="Main Image"/></center>
    </div>
  </div> 

  <div class = "jumbotron">
    <div class = "container">
      <div class = "center">
        <h1>HFC Meeting Rooms Website</h1>
        <h2>Log in to access room reservations.</h2><br>
        <%= link_to "Log In", new_user_session_path, class: "btn btn-warning btn-lg" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default btn-lg" %>
      </div>
    </div>
  </div>

<% end %>